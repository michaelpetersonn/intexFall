<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Assign Milestones - Ella Rises</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-4">
    <header class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="h4 mb-0">Assign Milestone</h1>
      <div>
        <a href="/milestones?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>"
           class="btn btn-outline-secondary btn-sm">Back to milestones</a>
      </div>
    </header>

    <div class="card shadow-sm">
      <div class="card-body">
        <form method="POST"
              action="/milestones/assign?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>"
              class="row g-3">
          <div class="col-md-6">
            <label class="form-label">Participant</label>
            <select name="participant_id" class="form-select" required>
              <option value="">Select participant...</option>
              <% participants.forEach(p => { %>
                <option value="<%= p.id %>">
                  <%= p.lastname %>, <%= p.firstname %> (ID: <%= p.id %>)
                </option>
              <% }) %>
            </select>
          </div>

          <div class="col-md-6">
            <label class="form-label">Milestone</label>
            <select name="milestone_id" class="form-select" required>
              <option value="">Select milestone...</option>
              <% milestones.forEach(m => { %>
                <option value="<%= m.id %>">
                  <%= m.name %>
                </option>
              <% }) %>
            </select>
          </div>

          <div class="col-12">
            <button class="btn btn-dark" type="submit">Assign milestone</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
</html>
