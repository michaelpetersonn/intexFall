<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Surveys - Ella Rises</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-4">
    <header class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="h4 mb-0">Post-event Surveys</h1>
      <div>
        <small class="me-3">
          Logged in as <strong><%= loggedInLevel === 'M' ? 'Manager' : 'User' %></strong>
        </small>
        <a href="/landing<%= loggedInUserId ? ('?userId=' + loggedInUserId + '&level=' + loggedInLevel) : '' %>"
           class="btn btn-outline-secondary btn-sm">Back to dashboard</a>
      </div>
    </header>

    <form class="row g-2 mb-3" method="GET" action="/surveys">
  <input type="hidden" name="userId" value="<%= loggedInUserId %>">
  <input type="hidden" name="level" value="<%= loggedInLevel %>">
  <div class="col-sm-4">
    <input class="form-control" name="q"
           placeholder="Search by ID, participant, event, or comments"
           value="<%= search %>">
  </div>
  <div class="col-sm-auto">
    <button class="btn btn-outline-primary" type="submit">Search</button>
  </div>
</form>

    <p class="text-muted mb-3">
      View aggregated survey responses tied to participants and event occurrences.
    </p>

    <table class="table table-striped table-hover bg-white shadow-sm">
      <thead>
        <tr>
          <th>ID</th>
          <th>Participant</th>
          <th>Event Occurrence</th>
          <th>Overall Score</th>
          <th>Comments</th>
        </tr>
      </thead>
      <tbody>
        <% surveys.forEach(s => { %>
          <tr>
            <td><%= s.id %></td>
            <td><%= s.participant_id %></td>
            <td><%= s.eventoccurrence_id %></td>
            <td><%= s.overallscore %></td>
            <td><%= s.comments %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
