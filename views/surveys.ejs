<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Surveys - Ella Rises</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-4">

    <!-- Header -->
    <header class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="h4 mb-0">Post-event Surveys</h1>

      <div>
        <small class="me-3">
          Logged in as <strong><%= loggedInLevel === 'M' ? 'Manager' : 'User' %></strong>
        </small>
        <a href="/landing<%= loggedInUserId ? ('?userId=' + loggedInUserId + '&level=' + loggedInLevel) : '' %>"
           class="btn btn-outline-secondary btn-sm">
          Back to dashboard
        </a>
      </div>
    </header>

    <!-- Search Form -->
    <form class="row g-2 mb-3" method="GET" action="/surveys">
      <input type="hidden" name="userId" value="<%= loggedInUserId %>">
      <input type="hidden" name="level" value="<%= loggedInLevel %>">

      <div class="col-sm-4">
        <input class="form-control" name="q"
               placeholder="Search by ID, participant, event, or comments"
               value="<%= search %>">
      </div>

      <div class="col-sm-auto">
        <button class="btn btn-outline-primary" type="submit">Search</button>
      </div>
    </form>

    <p class="text-muted mb-3">
      View aggregated survey responses submitted by participants.
    </p>

    <!-- Table -->
    <table class="table table-striped table-hover bg-white shadow-sm">
      <thead>
        <tr>
          <th>Survey ID</th>
          <th>Participant Email</th>
          <th>Event Name</th>
          <th>Event Date</th>
          <th>Overall Score</th>
          <th>Comments</th>
        </tr>
      </thead>

      <tbody>
        <% surveys.forEach(s => { %>
          <tr>
            <td><%= s.registration_id %></td>
            <td><%= s.participant_email %></td>
            <td><%= s.event_name %></td>
            <td><%= s.event_datetime_start ? new Date(s.event_datetime_start).toLocaleString() : '' %></td>
            <td><%= s.survey_overall_score %></td>
            <td><%= s.survey_comments %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

  </div>
</body>
</html>
