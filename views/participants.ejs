<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Participants - Ella Rises</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    body { background: #fff7f4; font-family: 'Montserrat', sans-serif; color: #1f1f1f; }
    h1, h2, h3, h4, h5, h6 { font-family: 'DM Serif Display', serif; color: #1f1f1f; }
    .btn-primary { background-color: #9AB59D; border-color: #9AB59D; color: #0f1c10; }
    .btn-primary:hover { background-color: #839c85; border-color: #839c85; color: #0f1c10; }
    .btn-success { background-color: #F9AFB1; border-color: #F9AFB1; color: #1f1f1f; }
    .btn-success:hover { background-color: #f3898e; border-color: #f3898e; color: #1f1f1f; }
    .card { border: none; border-radius: 12px; box-shadow: 0 6px 18px rgba(0,0,0,0.08); }
    .table > :not(caption) > * > * { background-color: #fff; }
    .ribbon {
      background: linear-gradient(90deg, #FFD8D1, #F9AFB1);
      padding: 12px 16px;
      border-radius: 12px;
      box-shadow: 0 8px 24px rgba(0,0,0,0.08);
    }
  </style>
</head>
<body class="bg-light">
  <div class="container py-4">

    <header class="ribbon d-flex flex-column flex-lg-row align-items-lg-center gap-2 mb-3">
      <div class="d-flex align-items-center gap-2">
        <img src="/images/logo.png" alt="Ella Rises logo" style="height:56px; width:auto;">
        <h1 class="h4 mb-0"><%= loggedInLevel === 'M' ? 'Participant Info' : 'Participant Directory' %></h1>
      </div>
      <div class="ms-lg-auto d-flex align-items-center gap-2 flex-wrap">
        <small class="me-2">
          <!-- Check log in-->
          Logged in as
          <strong>
            <%= loggedInLevel === 'M'
                  ? 'Manager'
                  : (loggedInUserId || 'User') %>
          </strong>
        </small>
        <a href="/landing?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>"
           class="btn btn-outline-secondary btn-sm">
          Back to dashboard
        </a>
      </div>
    </header>

    <% const isManager = (loggedInLevel === 'M'); %>

    <% function formatPhone(phone) {
         if (!phone) return '';
         const digits = ('' + phone).replace(/\D/g, '');
         if (digits.length !== 10) return phone;
         return digits.slice(0,3) + '-' + digits.slice(3,6) + '-' + digits.slice(6);
       } %>

    <!-- Search -->
    <form class="row g-2 mb-3" method="GET" action="/participants">
      <input type="hidden" name="userId" value="<%= loggedInUserId %>">
      <input type="hidden" name="level" value="<%= loggedInLevel %>">
      <div class="col-sm-4">
        <input class="form-control" name="q"
               placeholder="Search name or email"
               value="<%= search %>">
      </div>
      <div class="col-sm-auto">
        <button class="btn btn-outline-primary" type="submit">Search</button>
      </div>
    </form>

    <!-- Pagination controls -->
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div class="small text-muted">Page <%= page || 1 %></div>
      <div class="d-flex gap-2">
        <% const queryBase = '/participants?userId=' + encodeURIComponent(loggedInUserId || '') + '&level=' + encodeURIComponent(loggedInLevel || '') + (search ? '&q=' + encodeURIComponent(search) : ''); %>
        <% if (hasPrev) { %>
          <a class="btn btn-outline-secondary btn-sm" href="<%= queryBase %>&page=<%= (page || 1) - 1 %>">Previous</a>
        <% } %>
        <% if (hasNext) { %>
          <a class="btn btn-outline-secondary btn-sm" href="<%= queryBase %>&page=<%= (page || 1) + 1 %>">Next</a>
        <% } %>
      </div>
    </div>

    <!-- Manager-only: Add participant button -->
    <% if (isManager) { %>
      <div class="mb-3">
        <a class="btn btn-dark"
           href="/participants/new?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>">
          Add new participant
        </a>
      </div>
    <% } %>

    <% if (isManager) { %>
      <!-- MANAGER VIEW: full details + milestones -->
      <table class="table table-striped table-hover bg-white shadow-sm align-middle">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% participants.forEach(p => { %>
            <tr>
              <td><%= p.participant_first_name %> <%= p.participant_last_name %></td>
              <td><%= p.participant_email %></td>
              <td><%= p.participant_role || '' %></td>
              <td>
                <div class="d-flex align-items-center gap-2">
                  <a class="btn btn-sm btn-primary"
                     href="/participants/edit/<%= encodeURIComponent(p.participant_email) %>?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>">
                    View/Edit
                  </a>
                  <form method="POST"
                        action="/participants/delete/<%= p.participant_email %>?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>"
                        onsubmit="return confirm('Delete this participant? This may affect related data.');"
                        class="d-inline">
                    <button class="btn btn-sm btn-outline-danger" type="submit">
                      Delete
                    </button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <!-- USER / VISITOR VIEW: limited columns -->
      <table class="table table-striped table-hover bg-white shadow-sm">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Field of Interest</th>
          </tr>
        </thead>
        <tbody>
          <% participants.forEach(p => { %>
            <tr>
              <td><%= p.participant_first_name %> <%= p.participant_last_name %></td>
              <td><%= p.participant_email %></td>
              <td><%= p.participant_role || '' %></td>
              <td><%= p.participant_field_of_interest || '' %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>

  </div>
</body>
</html>
