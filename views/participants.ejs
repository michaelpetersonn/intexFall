<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Participants - Ella Rises</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-4">
    <header class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="h4 mb-0">Participants</h1>
      <div>
        <small class="me-3">
          Logged in as <strong><%= loggedInLevel === 'M' ? 'Manager' : 'User' %></strong>
        </small>
        <a href="/landing?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>"
           class="btn btn-outline-secondary btn-sm">Back to dashboard</a>
      </div>
    </header>

    <form class="row g-2 mb-3" method="GET" action="/participants">
      <input type="hidden" name="userId" value="<%= loggedInUserId %>">
      <input type="hidden" name="level" value="<%= loggedInLevel %>">
      <div class="col-sm-4">
        <input class="form-control" name="q" placeholder="Search name or email" value="<%= search %>">
      </div>
      <div class="col-sm-auto">
        <button class="btn btn-outline-primary" type="submit">Search</button>
      </div>
    </form>

    <% if (loggedInLevel === 'M') { %>
    <div class="card mb-4">
      <div class="card-header">Add participant</div>
      <div class="card-body">
        <form method="POST"
              action="/participants/add?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>"
              class="row g-2">
          <div class="col-md-3">
            <input name="firstname" class="form-control" placeholder="First name" required>
          </div>
          <div class="col-md-3">
            <input name="lastname" class="form-control" placeholder="Last name" required>
          </div>
          <div class="col-md-4">
            <input name="email" type="email" class="form-control" placeholder="Email" required>
          </div>
          <div class="col-md-2 d-grid">
            <button class="btn btn-dark" type="submit">Add</button>
          </div>
        </form>
      </div>
    </div>
    <% } %>

    <table class="table table-striped table-hover bg-white shadow-sm">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <% if (loggedInLevel === 'M') { %><th style="width: 220px;">Actions</th><% } %>
        </tr>
      </thead>
      <tbody>
        <% participants.forEach(p => { %>
          <tr>
            <td><%= p.firstname %> <%= p.lastname %></td>
            <td><%= p.email %></td>
            <% if (loggedInLevel === 'M') { %>
            <td>
              <form method="POST"
                    action="/participants/edit/<%= p.id %>?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>"
                    class="row g-1 mb-1">
                <div class="col-md-4">
                  <input name="firstname" class="form-control form-control-sm" value="<%= p.firstname %>">
                </div>
                <div class="col-md-4">
                  <input name="lastname" class="form-control form-control-sm" value="<%= p.lastname %>">
                </div>
                <div class="col-md-4">
                  <input name="email" class="form-control form-control-sm" value="<%= p.email %>">
                </div>
                <div class="col-12 mt-1">
                  <button class="btn btn-sm btn-primary" type="submit">Save</button>
                </div>
              </form>
              <form method="POST"
                    action="/participants/delete/<%= p.id %>?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>"
                    onsubmit="return confirm('Delete this participant?')" class="d-inline">
                <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
              </form>
            </td>
            <% } %>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
