<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Participants - Ella Rises</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-4">

    <header class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="h4 mb-0">Participants</h1>
      <div>
        <small class="me-3">
          Logged in as
          <strong>
            <%= loggedInLevel === 'M'
                  ? 'Manager'
                  : (loggedInLevel === 'U' ? 'User' : 'Visitor') %>
          </strong>
        </small>
        <a href="/landing?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>"
           class="btn btn-outline-secondary btn-sm">
          Back to dashboard
        </a>
      </div>
    </header>

    <% const isManager = (loggedInLevel === 'M'); %>

    <% function formatPhone(phone) {
         if (!phone) return '';
         const digits = ('' + phone).replace(/\D/g, '');
         if (digits.length !== 10) return phone;
         return digits.slice(0,3) + '-' + digits.slice(3,6) + '-' + digits.slice(6);
       } %>

    <!-- Search -->
    <form class="row g-2 mb-3" method="GET" action="/participants">
      <input type="hidden" name="userId" value="<%= loggedInUserId %>">
      <input type="hidden" name="level" value="<%= loggedInLevel %>">
      <div class="col-sm-4">
        <input class="form-control" name="q"
               placeholder="Search name or email"
               value="<%= search %>">
      </div>
      <div class="col-sm-auto">
        <button class="btn btn-outline-primary" type="submit">Search</button>
      </div>
    </form>

    <!-- Manager-only: Add participant button -->
    <% if (isManager) { %>
      <div class="mb-3">
        <a class="btn btn-dark"
           href="/participants/new?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>">
          Add new participant
        </a>
      </div>
    <% } %>

    <% if (isManager) { %>
      <!-- MANAGER VIEW: full details + milestones -->
      <table class="table table-striped table-hover bg-white shadow-sm align-middle">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>DOB</th>
            <th>Field of Interest</th>
            <th>Phone</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>School / Employer</th>
            <th>Total Donations</th>
            <th>Milestones</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% participants.forEach(p => { %>
            <tr>
              <td><%= p.participant_first_name %> <%= p.participant_last_name %></td>
              <td><%= p.participant_email %></td>
              <td><%= p.participant_role || '' %></td>
              <td><%= p.participant_dob || '' %></td>
              <td><%= p.participant_field_of_interest || '' %></td>
              <td><%= formatPhone(p.participant_phone) %></td>
              <td><%= p.participant_city || '' %></td>
              <td><%= p.participant_state || '' %></td>
              <td><%= p.participant_zip || '' %></td>
              <td><%= p.participant_school_or_employer || '' %></td>
              <td>
                <%= (p.total_donations ?? 0) === 0
                      ? '$0.00'
                      : ('$' + Number(p.total_donations).toFixed(2)) %>
              </td>
              <td>
                <div class="small mb-1">
                  <%= p.milestones_list && p.milestones_list.length
                        ? p.milestones_list
                        : 'No milestones yet' %>
                </div>
                <a class="btn btn-sm btn-outline-secondary"
                   href="/milestones?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>">
                  Edit milestones
                </a>
              </td>
              <td>
                <div class="d-flex flex-column gap-1">
                  <a class="btn btn-sm btn-primary"
                     href="/participants/edit/<%= encodeURIComponent(p.participant_email) %>?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>">
                    Edit
                  </a>
                  <form method="POST"
                        action="/participants/delete/<%= p.participant_email %>?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>"
                        onsubmit="return confirm('Delete this participant? This may affect related data.');">
                    <button class="btn btn-sm btn-outline-danger" type="submit">
                      Delete
                    </button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <!-- USER / VISITOR VIEW: limited columns -->
      <table class="table table-striped table-hover bg-white shadow-sm">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Field of Interest</th>
          </tr>
        </thead>
        <tbody>
          <% participants.forEach(p => { %>
            <tr>
              <td><%= p.participant_first_name %> <%= p.participant_last_name %></td>
              <td><%= p.participant_email %></td>
              <td><%= p.participant_role || '' %></td>
              <td><%= p.participant_field_of_interest || '' %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>

  </div>
</body>
</html>
