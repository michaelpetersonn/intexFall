<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Events - Ella Rises</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
  <div class="container py-4">

    <!-- HEADER -->
    <header class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="h4 mb-0">Events</h1>
      <div>
        <small class="me-3">
          Logged in as <strong><%= loggedInLevel === 'M' ? 'Manager' : 'User' %></strong>
        </small>
        <a href="/landing<%= loggedInUserId ? ('?userId=' + loggedInUserId + '&level=' + loggedInLevel) : '' %>"
           class="btn btn-outline-secondary btn-sm">
          Back to dashboard
        </a>
      </div>
    </header>

    <!-- SEARCH -->
    <form class="row g-2 mb-3" method="GET" action="/events">
      <input type="hidden" name="userId" value="<%= loggedInUserId %>">
      <input type="hidden" name="level" value="<%= loggedInLevel %>">
      <div class="col-sm-4">
        <input class="form-control"
               name="q"
               placeholder="Search name or description"
               value="<%= search %>">
      </div>
      <div class="col-sm-auto">
        <button class="btn btn-outline-primary" type="submit">Search</button>
      </div>
    </form>

    <!-- ADD EVENT (MANAGER ONLY) -->
    <% if (loggedInLevel === 'M') { %>
      <div class="card mb-4">
        <div class="card-header">Add event</div>
        <div class="card-body">
          <form method="POST"
                action="/events/add?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>"
                class="row g-2">

            <div class="col-md-3">
              <input name="event_name"
                     class="form-control"
                     placeholder="Event name"
                     required>
            </div>

            <div class="col-md-3">
              <input name="event_type"
                     class="form-control"
                     placeholder="Type (e.g., Workshop)">
            </div>

            <div class="col-md-4">
              <input name="event_description"
                     class="form-control"
                     placeholder="Description">
            </div>

            <div class="col-md-2 d-grid mt-2 mt-md-0">
              <button class="btn btn-dark" type="submit">Add</button>
            </div>

            <div class="col-md-4 mt-2">
              <input name="event_recurrence_pattern"
                     class="form-control"
                     placeholder="Recurrence (optional)">
            </div>

            <div class="col-md-3 mt-2">
              <input name="event_default_capacity"
                     type="number"
                     min="0"
                     class="form-control"
                     placeholder="Default capacity (optional)">
            </div>

          </form>
        </div>
      </div>
    <% } %>

    <!-- EVENTS TABLE -->
    <table class="table table-striped table-hover bg-white shadow-sm">
      <thead>
        <tr>
          <th>Name</th>
          <th>Type</th>
          <th>Description</th>
          <th>Recurrence</th>
          <th>Default Capacity</th>
          <% if (loggedInLevel === 'M') { %>
            <th style="width: 320px;">Actions</th>
          <% } %>
        </tr>
      </thead>

      <tbody>
        <% events.forEach(e => { %>
          <tr>
            <td><%= e.event_name %></td>
            <td><%= e.event_type || '' %></td>
            <td><%= e.event_description || '' %></td>
            <td><%= e.event_recurrence_pattern || '' %></td>
            <td><%= e.event_default_capacity || '' %></td>

            <% if (loggedInLevel === 'M') { %>
              <td>
                <!-- EDIT EVENT (except name, which is the key) -->
                <form method="POST"
                      action="/events/edit/<%= encodeURIComponent(e.event_name) %>?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>"
                      class="row g-1 mb-1">

                  <div class="col-md-3">
                    <input name="event_type"
                           class="form-control form-control-sm"
                           placeholder="Type"
                           value="<%= e.event_type || '' %>">
                  </div>

                  <div class="col-md-4">
                    <input name="event_description"
                           class="form-control form-control-sm"
                           placeholder="Description"
                           value="<%= e.event_description || '' %>">
                  </div>

                  <div class="col-md-3">
                    <input name="event_recurrence_pattern"
                           class="form-control form-control-sm"
                           placeholder="Recurrence"
                           value="<%= e.event_recurrence_pattern || '' %>">
                  </div>

                  <div class="col-md-2 mt-1 mt-md-0">
                    <input name="event_default_capacity"
                           type="number"
                           min="0"
                           class="form-control form-control-sm"
                           placeholder="Cap."
                           value="<%= e.event_default_capacity || '' %>">
                  </div>

                  <div class="col-12 mt-1">
                    <button class="btn btn-sm btn-primary" type="submit">Save</button>
                  </div>
                </form>

                <!-- DELETE EVENT -->
                <form method="POST"
                      action="/events/delete/<%= encodeURIComponent(e.event_name) %>?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>"
                      onsubmit="return confirm('Delete this event?');"
                      class="d-inline">
                  <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
                </form>
              </td>
            <% } %>
          </tr>
        <% }) %>
      </tbody>
    </table>

  </div>
</body>
</html>
