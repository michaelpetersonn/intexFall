<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Donations - Ella Rises</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    body { background: #fff7f4; font-family: 'Montserrat', sans-serif; color: #1f1f1f; }
    h1, h2, h3, h4, h5, h6 { font-family: 'DM Serif Display', serif; color: #1f1f1f; }
    .btn-primary { background-color: #9AB59D; border-color: #9AB59D; color: #0f1c10; }
    .btn-primary:hover { background-color: #839c85; border-color: #839c85; color: #0f1c10; }
    .btn-success { background-color: #F9AFB1; border-color: #F9AFB1; color: #1f1f1f; }
    .btn-success:hover { background-color: #f3898e; border-color: #f3898e; color: #1f1f1f; }
    .card { border: none; border-radius: 12px; box-shadow: 0 6px 18px rgba(0,0,0,0.08); }
    .table > :not(caption) > * > * { background-color: #fff; }
    .ribbon {
      background: linear-gradient(90deg, #FFD8D1, #F9AFB1);
      padding: 12px 16px;
      border-radius: 12px;
      box-shadow: 0 8px 24px rgba(0,0,0,0.08);
    }
  </style>
</head>
<body class="bg-light">
  <div class="container py-4">

    <!-- HEADER -->
    <header class="ribbon d-flex flex-column flex-lg-row align-items-lg-center gap-2 mb-3">
      <div class="d-flex align-items-center gap-2">
        <img src="/images/logo.png" alt="Ella Rises logo" style="height:56px; width:auto;">
        <h1 class="h4 mb-0"><%= loggedInLevel === 'M' ? 'Donations' : 'My Donation History' %></h1>
      </div>
      <div class="ms-lg-auto d-flex align-items-center gap-2 flex-wrap">
        <small class="me-2">
          Logged in as <strong><%= loggedInLevel === 'M' ? 'Manager' : loggedInUserId %></strong>
        </small>
        <a href="/landing<%= loggedInUserId ? ('?userId=' + loggedInUserId + '&level=' + loggedInLevel) : '' %>"
           class="btn btn-outline-secondary btn-sm">
          Back to dashboard
        </a>
      </div>
    </header>

    <!-- ADD DONATION (MANAGER ONLY) -->
    <% if (loggedInLevel === 'M') { %>
      <div class="card mb-4">
        <div class="card-header">Add donation</div>
        <div class="card-body">
          <form method="POST"
                action="/donations/add?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>"
                class="row g-2">

            <div class="col-md-6">
              <input name="participant_email"
                     type="email"
                     class="form-control"
                     list="participantEmails"
                     placeholder="Participant email (existing or new)"
                     required>
              <datalist id="participantEmails">
                <% (participants || []).forEach(p => { %>
                  <option value="<%= p.participant_email %>"><%= p.participant_last_name %>, <%= p.participant_first_name %></option>
                <% }) %>
              </datalist>
            </div>

            <div class="col-md-3">
              <input name="donation_amount"
                     type="number"
                     step="0.01"
                     min="0.01"
                     class="form-control"
                     placeholder="Amount"
                     required>
            </div>

            <div class="col-md-3 d-grid">
              <button class="btn btn-dark" type="submit">Add</button>
            </div>

          </form>
        </div>
      </div>
    <% } %>

    <!-- SEARCH -->
    <form class="row g-2 mb-3" method="GET" action="/donations">
      <input type="hidden" name="userId" value="<%= loggedInUserId %>">
      <input type="hidden" name="level" value="<%= loggedInLevel %>">
      <div class="col-sm-4">
        <input class="form-control"
               name="q"
               placeholder="<%= loggedInLevel === 'M' ? 'Search by donor name or email' : 'Search by date or amount' %>"
               value="<%= search %>">
      </div>
      <div class="col-sm-auto">
        <button class="btn btn-outline-primary" type="submit">Search</button>
      </div>
    </form>

    <!-- TABLE -->
    <table class="table table-striped table-hover bg-white shadow-sm">
      <thead>
        <tr>
          <th>Date</th>
          <% if (loggedInLevel === 'M') { %>
            <th>Donor</th>
            <th>Email</th>
          <% } %>
          <th>Amount</th>
          <% if (loggedInLevel === 'M') { %>
            <th style="width: 260px;">Edit amount</th>
          <% } %>
        </tr>
      </thead>

      <tbody>
        <% donations.forEach(d => { %>
          <tr>
            <td>
              <% const dateVal = d.donation_date_fmt || d.donation_date; %>
              <%= dateVal ? new Date(dateVal).toLocaleDateString() : 'N/A' %>
            </td>
            <% if (loggedInLevel === 'M') { %>
              <td><%= (d.participant_first_name || '') %> <%= (d.participant_last_name || '') %></td>
              <td><%= d.participant_email %></td>
            <% } %>
            <td>$<%= d.donation_amount %></td>

            <% if (loggedInLevel === 'M') { %>
              <td>
                <div class="d-flex flex-wrap align-items-center gap-2">
                  <form method="POST"
                        action="/donations/edit/<%= d.donation_id %>?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>"
                        class="d-flex align-items-center gap-2 flex-wrap mb-0">
                    <input name="donation_amount"
                           type="number"
                           step="0.01"
                           min="0"
                           class="form-control form-control-sm"
                           style="width: 110px;"
                           value="<%= d.donation_amount %>">
                    <button class="btn btn-sm btn-primary" type="submit">Save</button>
                  </form>
                  <form method="POST"
                        action="/donations/delete/<%= d.donation_id %>?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>"
                        onsubmit="return confirm('Delete this donation?');"
                        class="mb-0">
                    <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
                  </form>
                </div>
              </td>
            <% } %>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <% if (loggedInLevel === 'M' && (hasPrev || hasNext)) { %>
      <div class="d-flex justify-content-between align-items-center">
        <a class="btn btn-outline-primary <%= hasPrev ? '' : 'disabled' %>"
           href="<%= hasPrev ? ('/donations?userId=' + loggedInUserId + '&level=' + loggedInLevel + '&page=' + (page - 1) + (search ? ('&q=' + encodeURIComponent(search)) : '')) : '#' %>">
          Previous
        </a>
        <span class="text-muted">Page <%= page %></span>
        <a class="btn btn-outline-primary <%= hasNext ? '' : 'disabled' %>"
           href="<%= hasNext ? ('/donations?userId=' + loggedInUserId + '&level=' + loggedInLevel + '&page=' + (page + 1) + (search ? ('&q=' + encodeURIComponent(search)) : '')) : '#' %>">
          Next
        </a>
      </div>
    <% } %>

  </div>
</body>
</html>
