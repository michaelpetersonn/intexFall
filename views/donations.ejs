<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Donations - Ella Rises</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-4">

    <!-- HEADER -->
    <header class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="h4 mb-0">Donations</h1>
      <div>
        <small class="me-3">
          Logged in as <strong><%= loggedInLevel === 'M' ? 'Manager' : 'User' %></strong>
        </small>
        <a href="/landing<%= loggedInUserId ? ('?userId=' + loggedInUserId + '&level=' + loggedInLevel) : '' %>"
           class="btn btn-outline-secondary btn-sm">
          Back to dashboard
        </a>
      </div>
    </header>

    <!-- ADD DONATION (MANAGER ONLY) -->
    <% if (loggedInLevel === 'M') { %>
      <div class="card mb-4">
        <div class="card-header">Add donation</div>
        <div class="card-body">
          <form method="POST"
                action="/donations/add?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>"
                class="row g-2">

            <div class="col-md-6">
              <select name="participant_email" class="form-select" required>
                <option value="">Select participant...</option>
                <% (participants || []).forEach(p => { %>
                  <option value="<%= p.participant_email %>">
                    <%= p.participant_last_name %>, <%= p.participant_first_name %>
                    (<%= p.participant_email %>)
                  </option>
                <% }) %>
              </select>
            </div>

            <div class="col-md-3">
              <input name="donation_amount"
                     type="number"
                     step="0.01"
                     min="0.01"
                     class="form-control"
                     placeholder="Amount"
                     required>
            </div>

            <div class="col-md-3 d-grid">
              <button class="btn btn-dark" type="submit">Add</button>
            </div>

          </form>
        </div>
      </div>
    <% } %>

    <!-- SEARCH -->
    <form class="row g-2 mb-3" method="GET" action="/donations">
      <input type="hidden" name="userId" value="<%= loggedInUserId %>">
      <input type="hidden" name="level" value="<%= loggedInLevel %>">
      <div class="col-sm-4">
        <input class="form-control"
               name="q"
               placeholder="Search donor name or email"
               value="<%= search %>">
      </div>
      <div class="col-sm-auto">
        <button class="btn btn-outline-primary" type="submit">Search</button>
      </div>
    </form>

    <p class="text-muted mb-3">
      Internal view of participant donations. Public donors use the separate “Support Ella Rises” page.
    </p>

    <!-- TABLE -->
    <table class="table table-striped table-hover bg-white shadow-sm">
      <thead>
        <tr>
          <th>Date</th>
          <th>Donor</th>
          <th>Email</th>
          <th>Amount</th>
          <% if (loggedInLevel === 'M') { %>
            <th style="width: 220px;">Actions</th>
          <% } %>
        </tr>
      </thead>

      <tbody>
        <% donations.forEach(d => { %>
          <tr>
            <td>
              <% const dateVal = d.donation_date_fmt || d.donation_date; %>
              <%= dateVal ? new Date(dateVal).toLocaleDateString() : '' %>
            </td>
            <td><%= d.participant_first_name %> <%= d.participant_last_name %></td>
            <td><%= d.participant_email %></td>
            <td>$<%= d.donation_amount %></td>

            <% if (loggedInLevel === 'M') { %>
              <td>
                <!-- Edit amount -->
                <form method="POST"
                      action="/donations/edit/<%= d.donation_id %>?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>"
                      class="row g-1 mb-1">
                  <div class="col-8">
                    <input name="donation_amount"
                           type="number"
                           step="0.01"
                           min="0"
                           class="form-control form-control-sm"
                           value="<%= d.donation_amount %>">
                  </div>
                  <div class="col-4 d-grid">
                    <button class="btn btn-sm btn-primary" type="submit">Save</button>
                  </div>
                </form>

                <!-- Delete donation -->
                <form method="POST"
                      action="/donations/delete/<%= d.donation_id %>?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>"
                      onsubmit="return confirm('Delete this donation?');">
                  <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
                </form>
              </td>
            <% } %>
          </tr>
        <% }) %>
      </tbody>
    </table>

  </div>
</body>
</html>
