<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Website Users - Ella Rises</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
<div class="container py-4">

  <!-- Header -->
  <header class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0">Website Users</h1>
    <div>
      <small class="me-3">
        Logged in as <strong><%= loggedInLevel === 'M' ? 'Manager' : 'User' %></strong>
      </small>
      <a href="/landing?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>"
         class="btn btn-outline-secondary btn-sm">
        Back to dashboard
      </a>
    </div>
  </header>

   <% if (typeof error !== 'undefined' && error) { %>
     <div class="alert alert-danger">
        <%= error %>
     </div>
    <% } %>

  <!-- Search -->
  <form class="row g-2 mb-3" method="GET" action="/users">
    <input type="hidden" name="userId" value="<%= loggedInUserId %>">
    <input type="hidden" name="level" value="<%= loggedInLevel %>">

    <div class="col-sm-4">
      <input class="form-control" name="q"
             placeholder="Search email or role"
             value="<%= search %>">
    </div>

    <div class="col-sm-auto">
      <button class="btn btn-outline-primary" type="submit">Search</button>
    </div>
  </form>

  <!-- Add User -->
  <div class="card mb-4">
    <div class="card-header">Add website user</div>
    <div class="card-body">
      <form method="POST"
            action="/users/add?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>"
            class="row g-2">

        <div class="col-md-4">
          <input name="participant_email" type="email" class="form-control"
                 placeholder="Email (login username)" required>
        </div>

        <div class="col-md-4">
          <input name="password" type="text" class="form-control"
                 placeholder="Password" required>
        </div>

        <div class="col-md-2">
          <select name="user_level" class="form-select" required>
            <option value="">Select role...</option>
            <option value="M">Manager</option>
            <option value="U">User</option>
          </select>
        </div>

        <div class="col-md-2 d-grid">
          <button class="btn btn-dark" type="submit">Add</button>
        </div>
      </form>
    </div>
  </div>

  <!-- User List -->
  <table class="table table-striped table-hover bg-white shadow-sm">
    <thead>
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Role</th>
        <th style="width: 230px;">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% users.forEach(u => { %>
        <tr>
          <td><%= u.participant_email %></td>
          <td><%= u.password %></td>
          <td><%= u.user_level %></td>

          <td>

            <!-- Edit User -->
            <form method="POST"
                  action="/users/edit/<%= u.participant_email %>?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>"
                  class="row g-1 mb-1">

              <div class="col-md-4">
                <input name="password" class="form-control form-control-sm"
                       value="<%= u.password %>" required>
              </div>

              <div class="col-md-4">
                <select name="user_level" class="form-select form-select-sm" required>
                  <option value="M" <%= u.user_level === 'M' ? 'selected' : '' %>>Manager</option>
                  <option value="U" <%= u.user_level === 'U' ? 'selected' : '' %>>User</option>
                </select>
              </div>

              <div class="col-md-4 d-grid">
                <button class="btn btn-sm btn-primary" type="submit">Save</button>
              </div>
            </form>

            <!-- Delete User -->
            <form method="POST"
                  action="/users/delete/<%= u.participant_email %>?userId=<%= loggedInUserId %>&level=<%= loggedInLevel %>"
                  onsubmit="return confirm('Delete this user?')">
              <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
            </form>

          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

</div>
</body>
</html>