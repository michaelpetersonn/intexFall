<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Portal Users - Ella Rises</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    body { background: #fff7f4; font-family: 'Montserrat', sans-serif; color: #1f1f1f; }
    h1, h2, h3, h4, h5, h6 { font-family: 'DM Serif Display', serif; color: #1f1f1f; }
    .btn-primary { background-color: #9AB59D; border-color: #9AB59D; color: #0f1c10; }
    .btn-primary:hover { background-color: #839c85; border-color: #839c85; color: #0f1c10; }
    .btn-success { background-color: #F9AFB1; border-color: #F9AFB1; color: #1f1f1f; }
    .btn-success:hover { background-color: #f3898e; border-color: #f3898e; color: #1f1f1f; }
    .card { border: none; border-radius: 12px; box-shadow: 0 6px 18px rgba(0,0,0,0.08); }
    .table > :not(caption) > * > * { background-color: #fff; }
    .ribbon {
      background: linear-gradient(90deg, #FFD8D1, #F9AFB1);
      padding: 12px 16px;
      border-radius: 12px;
      box-shadow: 0 8px 24px rgba(0,0,0,0.08);
    }
  </style>
</head>

<body class="bg-light">
<div class="container py-4">

  <!-- Ribbon header -->
  <header class="ribbon d-flex flex-column flex-lg-row align-items-lg-center gap-2 mb-3">
    <div class="d-flex align-items-center gap-2">
      <img src="/images/logo.png" alt="Ella Rises logo" style="height:56px; width:auto;">
      <h1 class="h4 mb-0">Portal Users</h1>
    </div>
    <div class="ms-lg-auto d-flex align-items-center gap-2 flex-wrap">
      <small class="me-2">Logged in as <strong><%= loggedInLevel === 'M' ? 'Manager' : loggedInUserId %></strong></small>
      <a href="/landing" class="btn btn-outline-secondary btn-sm">
        Back to dashboard
      </a>
    </div>
  </header>

   <% if (typeof error !== 'undefined' && error) { %>
     <div class="alert alert-danger">
        <%= error %>
     </div>
    <% } %>

  <!-- Search -->
  <!-- Add User -->
  <div class="card mb-4">
    <div class="card-header">Add Portal User</div>
    <div class="card-body">
      <form method="POST"
            action="/users/add"
            class="row g-2">

        <div class="col-md-4">
          <input name="participant_email" type="email" class="form-control"
                 placeholder="Email (login username)" required>
        </div>

        <div class="col-md-4">
          <input name="password" type="password" class="form-control"
                 placeholder="Password" required autocomplete="new-password">
        </div>

        <div class="col-md-2">
          <select name="user_level" class="form-select" required>
            <option value="">Select role...</option>
            <option value="M">Manager</option>
            <option value="U">User</option>
          </select>
        </div>

        <div class="col-md-2 d-grid">
          <button class="btn btn-dark" type="submit">Add</button>
        </div>
      </form>
    </div>
  </div>

  <form class="row g-2 mb-3" method="GET" action="/users">

    <div class="col-sm-4">
      <input class="form-control" name="q"
             placeholder="Search email or role"
             value="<%= search %>">
    </div>

    <div class="col-sm-auto">
      <button class="btn btn-outline-primary" type="submit">Search</button>
    </div>
  </form>

  <p class="text-muted small mb-2">Passwords are stored hashed and not displayed. Enter a new password to reset one.</p>

  <!-- User List -->
  <table class="table table-striped table-hover bg-white shadow-sm">
    <thead>
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Role</th>
        <th style="width: 420px;">Reset Password &amp; Level</th>
      </tr>
    </thead>

    <tbody>
      <% users.forEach(u => { %>
        <tr>
          <td><%= u.participant_email %></td>
          <td class="text-muted">••••••••</td>
          <td><%= u.user_level === 'M' ? 'Manager' : 'User' %></td>

          <td>
            <div class="d-flex align-items-center gap-2 flex-nowrap">
              <!-- Edit User -->
              <form method="POST"
                    action="/users/edit/<%= u.participant_email %>"
                    class="d-flex align-items-center gap-2 flex-nowrap">
                <input name="password" type="password" class="form-control form-control-sm"
                       placeholder="********" autocomplete="new-password" style="min-width: 180px;">

                <select name="user_level" class="form-select form-select-sm" required style="min-width: 110px;">
                  <option value="M" <%= u.user_level === 'M' ? 'selected' : '' %>>Manager</option>
                  <option value="U" <%= u.user_level === 'U' ? 'selected' : '' %>>User</option>
                </select>

                <button class="btn btn-sm btn-primary" type="submit">Save</button>
              </form>

              <!-- Delete User -->
              <form method="POST"
                    action="/users/delete/<%= u.participant_email %>"
                    onsubmit="return confirm('Delete this user?')"
                    class="d-inline">
                <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
              </form>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

</div>
</body>
</html>
